<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dialog_recorder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recorder"
            android:visibility="visible"
            android:contentDescription="@string/tv_icon_des"
            />

        <ImageView
            android:id="@+id/iv_dialog_recorder_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/v1"
            android:visibility="visible"
            android:contentDescription="@string/tv_icon_des"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_recorder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_dialog_recorder_label_normal"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        />

</LinearLayout>
